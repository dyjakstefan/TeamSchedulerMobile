<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TSM.Views.NewTeamPage"
             Title ="New Team">
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Name" FontSize="Medium" />
            <Entry x:Name="NameEntry" Text="{Binding Name}" FontSize="Small" />
            <Button Command="{Binding AddTeamCommand}" Text="Add" TextColor="White"  
                    FontAttributes="Bold" FontSize="Medium" HorizontalOptions="FillAndExpand"
                    BackgroundColor="#3897F0" HeightRequest="50"/> 
        </StackLayout>
    </ContentPage.Content>
</ContentPage>