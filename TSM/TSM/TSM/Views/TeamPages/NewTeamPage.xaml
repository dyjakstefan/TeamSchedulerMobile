<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TSM.Views.NewTeamPage"
             Title ="Nowy zespół">
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Nazwa" FontSize="Medium" />
            <Entry x:Name="NameEntry" Text="{Binding Name}" FontSize="Medium" />
            <Button Command="{Binding AddTeamCommand}" Text="Zapisz"
                    FontAttributes="Bold" FontSize="Medium" HorizontalOptions="FillAndExpand" HeightRequest="50"/> 
        </StackLayout>
    </ContentPage.Content>
</ContentPage>